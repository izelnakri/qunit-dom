{
  "name": "qunit-dom",
  "version": "1.6.0",
  "description": "High Level DOM Assertions for QUnit",
  "keywords": [
    "browser",
    "dom",
    "ember-addon",
    "html",
    "qunit",
    "qunit-plugin",
    "testing"
  ],
  "repository": "https://github.com/simplabs/qunit-dom",
  "license": "MIT",
  "author": "simplabs GmbH",
  "types": "dist/qunit-dom.d.ts",
  "main": "dist/qunit-dom-modules.js",
  "files": [
    "dist/*"
  ],
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "node_modules/.bin/tsc $(find 'lib' -type f) --outDir dist --target es6 --moduleResolution node --experimentalDecorators true -d --allowJs",
    "changelog": "lerna-changelog",
    "docs": "yarn build && documentation build dist/qunit-dom.js --config documentation.yml -f md -o API.md",
    "lint": "eslint . --cache",
    "prepublish": "npm run build",
    "release": "release-it",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ember": "npm run build && qunitx test/acceptance-test.js --browser --debug",
    "test:watch": "jest --watchAll --notify"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/qunit": "2.11.1",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "documentation": "13.2.5",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "26.6.3",
    "lerna-changelog": "1.0.1",
    "prettier": "2.3.0",
    "qunitx": "^0.1.10",
    "release-it": "14.7.0",
    "release-it-lerna-changelog": "3.1.0",
    "ts-jest": "26.5.6",
    "typescript": "4.3.2"
  },
  "engines": {
    "node": "10.* || >= 12.*"
  },
  "changelog": {
    "repo": "simplabs/qunit-dom",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "commitMessage": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": {
      "publish": false
    }
  },
  "qunitx": {
    "output": "tmp",
    "timeout": 20000,
    "failFast": true,
    "port": 1234,
    "htmlPaths": [
      "test/tests.html"
    ]
  }
}
